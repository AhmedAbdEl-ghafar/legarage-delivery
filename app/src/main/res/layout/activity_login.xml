<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView019998"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ahmedabdelghafar.legarage_delivery.login"
    android:background="@drawable/login9"
    android:src="@drawable/login9"
    android:scaleType = "centerCrop">

<RelativeLayout

    android:id="@+id/activity_main"
    android:layout_width="900dp"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:fontFamily="cursive"
        android:padding="5px"
        android:text="@string/welcome_string"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:hint="@string/hint_username"
        android:drawableRight="@drawable/username"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/welcomeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:hint="@string/hint_password"
        android:drawableRight="@drawable/password"
        android:inputType="textPassword"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/signbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="@string/button_signin"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>


    </RelativeLayout>